<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.ecommerce.dao.TestMapper">
    <insert id="save" parameterType="com.project.ecommerce.dto.TestDto" useGeneratedKeys="true" keyColumn="id">
        INSERT INTO test
        (description, text)
        VALUES
        (#{description,jdbcType=BLOB},
         #{text,jdbcType=VARCHAR});
    </insert>

    <select id="get" resultType="com.project.ecommerce.dto.TestDto">
        SELECT * FROM test ORDER BY id DESC LIMIT 1
    </select>
</mapper>

